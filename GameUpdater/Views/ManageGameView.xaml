<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GameUpdater.Views.ManageGameView">
	<Grid RowDefinitions="Auto" ColumnDefinitions="Auto, Auto">
		<Button 
            Margin="5" 
            Grid.Column="0" 
            Command="{Binding CheckFiles}" 
            Content="检查更新" 
            FontFamily="Microsoft Yahei" 
            Width="100"
            Height="30"
            Foreground="AliceBlue"
            BorderThickness="0" />
		<Button HorizontalAlignment="Stretch" VerticalAlignment="Center" IsVisible="False" Margin="5" Grid.Column="1" Command="{Binding Uninstall}" Content="Uninstall" BorderThickness="0" />

	</Grid>
</UserControl>
