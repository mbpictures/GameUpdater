<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GameUpdater.Views.CheckFilesView">
        <Border Background="#FFFFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical" Margin="20">
                <TextBlock Margin="5" Text="正在校验文件..." HorizontalAlignment="Center" Foreground="#FF000000" FontSize="30" />
                <Grid>
                    <ProgressBar Value="{Binding Progress}" />
                    <TextBlock Text="{Binding ProgressText}" HorizontalAlignment="Center"></TextBlock>
                </Grid>
                <TextBlock Text="{Binding StatusText}" HorizontalAlignment="Left" Foreground="#FF000000" />
            </StackPanel>
        </Border>
</UserControl>
